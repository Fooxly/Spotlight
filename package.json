{
    "name": "@fooxly/devkit",
    "version": "1.0.0",
    "private": true,
    "main": "./lib/cjs/index.js",
    "module": "./lib/esm/index.js",
    "types": "./types/index.d.ts",
    "scripts": {
        "debug": "concurrently --kill-others \"tsc -w\" \"tsc-alias -w\"",
        "build": "yarn build:esm && yarn build:cjs",
        "build:esm": "tsc && tsc-alias",
        "build:cjs": "tsc --module commonjs --outDir lib/cjs && tsc-alias",
        "typecheck": "tsc --noEmit",
        "lint": "eslint --ext ts,tsx src scripts",
        "lint-fix": "yarn lint --fix"
    },
    "dependencies": {
        "react-hotkeys-hook": "^3.4.4"
    },
    "devDependencies": {
        "@fooxly/eslint-config": "https://github.com/Fooxly/eslint-config",
        "@fooxly/eslint-config-react": "https://github.com/Fooxly/eslint-config-react",
        "@types/react": "^18.0.2",
        "@types/react-dom": "^18.0.0",
        "@types/styled-components": "^5.1.25",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "@types/react-transition-group": "^4.4.4",
        "concurrently": "^7.1.0",
        "tsc-alias": "^1.6.6",
        "typescript": "^4.6.3"
    },
    "peerDependencies": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "styled-components": "^5.3.5"
    }
}
